<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HiddenActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/congrats"
        android:text="Welcome Developer! You are one step away from joining the TEAM"
        android:textSize="30sp"
        android:textAllCaps="true"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textStyle="italic"
        android:fontFamily="sans-serif-smallcaps"/>

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="151dp"
        android:fontFamily="casual"
        android:text="SUNDAY MONDAY TUESDAY WEDNESDAY THURSDAY FRIDAY SATURDAY; What day comes after three days after the day which comes two days after the day which comes immediately after the day which comes two days after Monday?"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_marginTop="10dp"
        android:hint="Good luck!"
        android:textColorHint="#000"
        android:id="@+id/diversion" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/diversion"
        android:layout_marginLeft="150dp"
        android:text="Done!"
        android:textColor="#000"
        android:textAllCaps="false"
        android:id="@+id/fake"/>



</RelativeLayout>